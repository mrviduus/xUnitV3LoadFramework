<Project>
  <!-- Central Package Management Configuration -->
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <CentralPackageTransitivePinningEnabled>true</CentralPackageTransitivePinningEnabled>
    <EnablePackageVersionOverride>false</EnablePackageVersionOverride>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>
  <!-- Package Version Management -->
  <ItemGroup Label="Core Framework Dependencies">
    <!-- Load Testing Core (includes Akka.NET) -->
    <PackageVersion Include="LoadSurge" Version="1.0.0.49" />
    <!-- xUnit v3 Core Dependencies -->
    <PackageVersion Include="xunit.v3" Version="3.2.1" />
    <PackageVersion Include="xunit.v3.extensibility.core" Version="3.2.1" />
  </ItemGroup>
  <ItemGroup Label="Testing Platform Dependencies">
    <!-- Microsoft Testing Platform -->
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="18.0.1" />
    <!-- OpenTelemetry Integration for xUnit -->
    <PackageVersion Include="xUnitOTel" Version="1.0.0.28" />
  </ItemGroup>
  <ItemGroup Label="Microsoft Extensions Dependencies">
    <!-- Dependency Injection (used in tests) -->
    <PackageVersion Include="Microsoft.Extensions.DependencyInjection" Version="10.0.1" />
    <!-- HTTP Client Factory (used in tests) -->
    <PackageVersion Include="Microsoft.Extensions.Http" Version="10.0.1" />
    <!-- Hosting (used in tests) -->
    <PackageVersion Include="Microsoft.Extensions.Hosting" Version="10.0.1" />
  </ItemGroup>
  <ItemGroup Label="Development and Build Tools">
    <!-- Source Link for GitHub Actions -->
    <PackageVersion Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageVersion>
  </ItemGroup>
  <ItemGroup Label="NetStandard Compatibility">
    <!-- IAsyncDisposable support for netstandard2.0 -->
    <PackageVersion Include="Microsoft.Bcl.AsyncInterfaces" Version="10.0.1" />
  </ItemGroup>
</Project>